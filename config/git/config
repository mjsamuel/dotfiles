[user]
    name = mjsamuel
    email = hello@mjsamuel.com
    signingkey = ~/.ssh/id_rsa.pub

[core]
    editor = nvim
    excludesFile = ~/.config/git/gitignore_global

[init]
    defaultBranch = main

[commit]
    gpgsign = true

[gpg]
    format = ssh
    allowedSignersFile = ~/.ssh/allowed_signers

[pull]
    ff = only

[push]
    default = current
    autoSetupRemote = true

[rebase]
    updateRefs = true

[rerere]
    enabled = true

[branch]
    sort = -committerdate

[column]
    ui = auto

[alias]
    b = "blame -w -C -C -C"

[includeIf "gitdir:~/Work/"]
    path = ~/Work/.gitconfig

[includeIf "gitdir:/mnt/c/Work/"]
    path = /mnt/c/Work/.gitconfig
